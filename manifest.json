{
  "manifest_version": 3,
  "name": "Notion Flashcards",
  "version": "0.1",
  "description": "Generate flashcards from Notion pages using GPT-4",
  "permissions": ["storage", "activeTab", "identity", "tabs"],
  "host_permissions": [
    "https://api.notion.com/*",
    "https://www.notion.so/*",
    "https://*.notion.site/*",
    "https://api.openai.com/*",
    "https://mkdjckjdkeconibpdkdhpoknmpoeabbp.chromiumapp.org/*",
    "https://ecshzdgyoduuwaftjppg.supabase.co/*"
  ],
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'; connect-src 'self' https://api.notion.com https://www.notion.so https://api.openai.com https://mkdjckjdkeconibpdkdhpoknmpoeabbp.chromiumapp.org https://ecshzdgyoduuwaftjppg.supabase.co"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.notion.so/*",
        "https://*.notion.site/*"
      ],
      "js": ["src/content/overlay.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "src/popup/*",
        "assets/*",
        "vendor/*"
      ],
      "matches": [
        "https://www.notion.so/*",
        "https://*.notion.site/*"
      ]
    }
  ],
  "icons": {
    "16": "assets/logo_main.png",
    "48": "assets/logo_main.png",
    "128": "assets/logo_main.png"
  }
}